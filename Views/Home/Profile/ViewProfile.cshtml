@model EcomMVC.ViewModel.UserViewModel

@{
    ViewData["Title"] = "View Profile";
}

<h2>Profile Details</h2>

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h4>Profile Information</h4>
        </div>
        <div class="card-body">
            <div class="form-group mb-3">
                <label>Name</label>
                <p class="form-control-plaintext">@Model.Name</p>
            </div>
            <div class="form-group mb-3">
                <label>Email</label>
                <p class="form-control-plaintext">@Model.Email</p>
            </div>
            <div class="form-group mb-3">
                <label>Phone Number</label>
                <p class="form-control-plaintext">@Model.PhoneNumber</p>
            </div>
            <a class="btn btn-primary" asp-action="EditProfile" asp-controller="Account">Edit Profile</a>
        </div>
    </div>
</div>
