@model EcomMVC.ViewModel.CartViewModel

<h2>Checkout</h2>

<p>Please review your order before proceeding with payment.</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Price</td>
                <td>@(item.Price * item.Quantity)</td>
            </tr>
        }
    </tbody>
</table>

<h3>Total: $@Model.Items.Sum(i => i.Price * i.Quantity)</h3>

<form asp-action="PaymentDetails" method="post">
    <input type="hidden" name="cartId" value="@Model.Id" />
    <button type="submit" class="btn btn-success">Proceed to Payment</button>
</form>
