@model EcomMVC.ViewModel.UserViewModel

@{
    ViewData["Title"] = "View Profile";
}

<h2>Profile Details</h2>

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h4>Profile Information</h4>
        </div>
        <div class="card-body">
            <div class="form-group mb-3">
                <label>Name:</label>
                <b><p class="form-control-plaintext">@Model.Name</p></b>

            </div>
            <div class="form-group mb-3">
                <label>Email Address:</label>
                <b><p class="form-control-plaintext">@Model.Email</p></b>
            </div>
            <div class="form-group mb-3">
                <label>Phone Number: </label>
            <b><p class="form-control-plaintext">@Model.PhoneNumber</p></b>
            </div>
            <a class="btn btn-primary" asp-action="EditProfile" asp-controller="Profile">Edit Profile</a>
        </div>
    </div>
</div>
