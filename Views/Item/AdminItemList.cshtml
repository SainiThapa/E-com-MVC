@model IEnumerable<EcomMVC.Models.Item>

<h2>Manage Items</h2>
<a asp-action="AddItem" class="btn btn-primary">Add New Items</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td>@item.Quantity</td>
                <td>
                    <img src="@item.ImagePath" alt="@item.Name" style="width: 100px;" />
                </td>
                <td>
                    <a asp-action="EditItem" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <form asp-action="DeleteItem" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
