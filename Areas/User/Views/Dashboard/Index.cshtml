@model IEnumerable<EcomMVC.ViewModel.ItemViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewData["Title"] = "User Dashboard";
}

<h2>Products Available</h2>

<div class="row">
    @if (Model != null && Model.Any())
    {
        foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img class="card-img-top" src="@item.ImagePath" alt="Product Image" style="width:100%; height:200px; object-fit:cover;">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">Price: $@item.Price</p>
                        <p class="card-text">@item.Description</p>
                        <a href="@Url.Action("Details", "Product", new { id = item.Id })" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <p>No products available at the moment.</p>
    }
</div>
